{
    "name": "silverback/svbk-email",
    "type": "wordpress-muplugin",
    "authors": [
        {
            "name": "Brando Meniconi",
            "email": "b.meniconi@silverbackstudio.it"
        }
    ],
    "autoload": {
        "psr-4": {"Svbk\\WP\\Email\\": "src/"}
    },   
    "require": {
        "drewm/mailchimp-api": "^2.4",
        "mandrill/mandrill": "^1.0",
        "getresponse/getresponse": "^0.0.2",
        "sendinblue/api-v3-sdk": "^6.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "wp-coding-standards/wpcs": "^0.13.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.4.2",
        "wimg/php-compatibility": "^8.0"        
    },
    "replace": [
        "silverbackstudio/wp-email"
    ],
    "scripts": {
        "test": [
          "vendor/bin/phpcs src",
          "vendor/bin/phpunit --bootstrap vendor/autoload.php --color tests"
        ],        
        "beautify": [
          "vendor/bin/phpcbf src"
        ]        
    }     
}
